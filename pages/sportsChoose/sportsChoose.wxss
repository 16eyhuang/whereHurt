/* pages/sportsChoose/sportsChoose.wxss */
.pro-detail{
  height: 100%;
  position: relative;
}
.pro-detail-content{
  width: 100%;
  height: 75%;
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center; 
}
.pro-content-title{
  line-height: 90rpx;
  width: 70%;
  text-align: center;
  align-self:center;  
  background-color:#fff;
  color: #2fcabb;
  border-radius: 10rpx;
}
.pro-content-choose{
  height: 60%;
  width: 70%;
  border-radius: 10rpx;
  border: 20rpx solid #f4f8fa;
  background-color:#fff; 
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.choose-item{
  position: relative;
  display: flex;
  height: 90%;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width:80%;
  border-bottom:2rpx solid #efefef;
}
.choose-img{
  width: 50rpx;
  height: 50rpx;
  margin-right:20rpx;
  align-items: center;
  justify-content: center;
}
.choose-text{
  font-size: 40rpx;
  display: flex;
  line-height: 40rpx;
  color:#ccc;
}
.color-green{
  color:#2fcabb;
}
.next-btns{
  font-size:40rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
.next-btn{
  font-size:40rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color:#00bba9;
  border-radius: 90rpx;
  color:#fff;
  text-align: center;
  width: 70%;
}