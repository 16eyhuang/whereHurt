<!--pages/sportsChoose/sportsChoose.wxml-->
<view class="pro-detail">
  <view class="pro-detail-content" style="align-items:center">
    <view class="pro-content-title" style="margin-top:5%;">请选择一项运动</view>
    <view class="pro-content-choose">
      <view class="choose-item" style='padding-top:8%;padding-bottom:8%;' bindtap="choose" data-name="sports" data-value='网球' data-choose_page='1'>
        <image src="../../public/image/tennis{{formdata.sports=='网球'?'_g':''}}.png" class='choose-img' data-sports='网球'></image>
        <view data-sports='网球' class='{{formdata.sports=="网球"?"color-green;choose-text":"choose-text"}}'>网球</view>
      </view>
      <view class="choose-item" style='padding-top:8%;padding-bottom:8%;' bindtap="choose" data-name="sports" data-value='足球' data-choose_page='1'>
        <image data-sports='足球' src="../../public/image/soccer{{formdata.sports=='足球'?'_g':''}}.png" class='choose-img'></image>
        <view data-sports='足球' class='{{formdata.sports=="足球"?"color-green;choose-text":"choose-text"}}'>足球</view>
      </view>
      <view class="choose-item" style='padding-top:8%;padding-bottom:8%;' bindtap="choose" data-name="sports" data-value='篮球' data-choose_page='1'>
        <image data-sports='篮球' src="../../public/image/basketball{{formdata.sports=='篮球'?'_g':''}}.png" class='choose-img'></image>
        <view data-sports='篮球' class='{{formdata.sports=="篮球"?"color-green;choose-text":"choose-text"}}'>篮球</view>
      </view>
      <view class="choose-item" style='padding-top:8%;padding-bottom:8%;' bindtap="choose" data-name="sports" data-value='羽毛球' data-choose_page='1'>
        <image data-sports='羽毛球' src="../../public/image/badminton{{formdata.sports=='羽毛球'?'_g':''}}.png" class='choose-img'></image>
        <view data-sports='羽毛球' class='{{formdata.sports=="羽毛球"?"color-green;choose-text":"choose-text"}}'>羽毛球</view>
      </view>
    </view>
  </view>
  <view class="next-btns" style='margin-top:5%'>
    <view class="next-btn" bindtap="next">下一步</view>
  </view>
</view>