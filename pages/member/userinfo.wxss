/* pages/member/userinfo.wxss */
page {
  background: #f1f1f1;
}
#info {
  width: 100%;
  height: 100%;
  background: #fff;
  position: absolute;
  top: 0rpx;
  z-index: 995;
}
.form-item {
  width: 710rpx;
  height: auto;
  margin: 0 auto 40rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
}
.form-left {
  font-size: 28rpx;
  color: #282828;
  margin-left: 20rpx;
}

.form-left text {
  color: #e23738;
}

.form-right {
  width: 470rpx;
  float: right;
  margin-right: 22rpx;
  font-size: 28rpx;
}

.form-right input {
  width: 100%;
  height: 68rpx;
  border: 1rpx solid #dedede;
}
.other-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
  font-size: 28rpx;
}
.input {
  width: 500rpx !important;
  height: 68rpx;
}
.age-text{
  width: 200rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
}
.submit {
  width: 300rpx;
  height: 74rpx;
  background: #2fcabb;
  color: #fff;
  border: none;
  outline: none;
  font-size: 28rpx;
  border-radius: 0;
  margin-top: 20rpx;
}